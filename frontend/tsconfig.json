{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "NodeNext",
    "strict": true,
    "moduleResolution": "NodeNext",
    "lib": ["es2018", "dom", "es5", "dom.iterable"],
    "sourceMap": true,
    "declarationMap": true,
    "rootDirs": ["bazel-bin"],
    "paths": {
      "nodemodules/*": ["../node_modules/*"]
    },
    "declaration": true,
    "allowJs": true
  },
  "exclude": ["bazel-cheetah", "bazel-out", "bazel-testlogs", "node_modules"]
}
