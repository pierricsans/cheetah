{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "module": "NodeNext",
    "strict": true,
    "moduleResolution": "NodeNext",
    "lib": ["es2016", "dom", "es5"],
    "sourceMap": true,
    "declarationMap": true,
    "paths": {
      "@myorg/*": [
        "../*"
      ],
      "nodemodules/*": [
        "../node_modules/*"
      ]
    },
    "declaration": true,
    "allowJs": true,
  }
}