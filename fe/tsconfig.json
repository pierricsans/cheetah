{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2021",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "declarationMap": true,
    "paths": {
      // Replace <workspace-name> with the name of your workspace
      "<workspace-name>/*": [
        "*", // Enables absolute paths for src files in your project
        "bazel-bin/*" // Enables referencing generate protos with absolute paths
      ],
      "@myorg/*": [
        "../*"
      ]
    },
    "declaration": true,
    "allowJs": true
  },
  "type": "module"
}